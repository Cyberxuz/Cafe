<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imagedrawe1"
        android:scaleType="centerCrop"
        android:src="@drawable/shopdraew"
        app:riv_oval="true"
        tools:ignore="MissingConstraints"></com.makeramen.roundedimageview.RoundedImageView>
    <view
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/imagedrawe1"
        app:layout_constraintEnd_toEndOf="@id/imagedrawe1"
        app:layout_constraintEnd_toStartOf="@id/imagedrawe1"
        app:layout_constraintBottom_toTopOf="@id/imagedrawe1"
        ></view>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/drawerimage"
        app:layout_constraintBottom_toTopOf="@id/view1"
        app:layout_constraintStart_toEndOf="@id/imagedrawe1"
        tools:layout_editor_absoluteX="134dp"
        tools:ignore="MissingConstraints"></TextView>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="cyberxuz"
        android:layout_marginStart="10dp"
        android:textSize="10dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imagedrawe1"
        app:layout_constraintTop_toBottomOf="@id/view1"
        tools:layout_editor_absoluteX="134dp"
        tools:ignore="MissingConstraints"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>